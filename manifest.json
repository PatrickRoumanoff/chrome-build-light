{
    "name": "Chrome Delcom Light Controller",
    "version": "0.1",
    "description": "Controls a Delcom build light from Chrome",
    "manifest_version": 2,
    "minimum_chrome_version": "40.0.2213.0",
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "permissions": ["hid", {
            "usbDevices": [{
                "vendorId": 4037,
                "productId": 45184
            }]
        },
        "http://*/*", "https://*/*"
    ],
    "icons": {
        "128": "assets/icon_128.png"
    }
}